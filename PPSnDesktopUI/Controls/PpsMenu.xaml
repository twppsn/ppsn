<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:uiC="clr-namespace:TecWare.PPSn.Controls"
					xmlns:ui="clr-namespace:TecWare.PPSn.UI"
					xmlns:uiT="clr-namespace:TecWare.PPSn.Themes">
	<Style TargetType="{x:Type uiC:PpsMenuControl}">
		<Setter Property="Focusable" Value="False" />
		<Setter Property="Background" Value="{DynamicResource PPSnPopupBackgroundBrush}" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate>
					<Border BorderThickness="1" Background="{TemplateBinding Background}" BorderBrush="{DynamicResource PPSnControlNormalBorderBrush}">
						<ItemsPresenter Focusable="False" />
					</Border>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>