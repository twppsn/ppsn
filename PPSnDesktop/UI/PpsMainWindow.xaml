																		<Binding Path="SubTitle" Converter="{x:Static uiO:PpsConverter.MultiToSingleLine}" />
																	</MultiBinding>
																</TextBlock.Text>
															</TextBlock>
															<ui:PpsButton x:Name="ClosePaneButton"
