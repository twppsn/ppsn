<ui:PpsWindowPaneControl x:Class="TecWare.PPSn.UI.PpsWebViewPane"
						 x:ClassModifier="internal"
                         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                         xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			             xmlns:ui="http://tecware-gmbh.de/ppsn/wpf/2015"
                         xmlns:uiL="clr-namespace:TecWare.PPSn.UI"
						 Title="Information"
						 SubTitle="{Binding Source={x:Reference webView},Path=Title}"
                         mc:Ignorable="d" 
                         d:DesignHeight="450" d:DesignWidth="800">
	<ui:PpsWindowPaneControl.Commands>
		<ui:PpsUICommandButton x:Name="goBackButton" DisplayText="Zurück" Command="{x:Static ui:PpsWebView.GoBackCommand}" />
		<ui:PpsUICommandButton DisplayText="Home" Command="{x:Static ui:PpsWebView.GoHomeCommand}" />
		<ui:PpsUICommandButton x:Name="goForwardButton" DisplayText="Vorwärts" Command="{x:Static ui:PpsWebView.GoForwardCommand}" />
	</ui:PpsWindowPaneControl.Commands>
	
	<ui:PpsWebView x:Name="webView" />
</ui:PpsWindowPaneControl>
